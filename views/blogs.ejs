<%- include("partials/header.ejs") %>
<body>
    <div class="create_blogs">
        <% if (locals.blogEdit) { %>
            <form action="/editBlog" method="post">
                <input type="text" name="author" value="<%= blogEdit.author %>" />
                <input type="text" name="title" value="<%= blogEdit.title %>" />
                <textarea name="content"><%= blogEdit.content %></textarea>
                 <input type="submit" value="Save" />
                </form>

        <% } else { %>
        <form action="/blog" method="post">
            <input class="author" type="text" name="author" placeholder="Author" />
      <input class="title" type="text" name="title" placeholder="Title" />
      <textarea
        class="content"
        type="text"
        name="content"
        placeholder="Blog Content"
      /></textarea>
      <input class="btn_submit" type="submit" value="Create" />
        </form>
       <% } %> 
    </div>
</body>
<%- include("partials/footer.ejs") %>